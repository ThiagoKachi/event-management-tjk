generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  date      DateTime
  location  String
  capacity  Int
  available Int
  price     Float
  status    String

  orders Order[]

  @@map("events")
}

model Order {
  id             String   @id @default(uuid()) @db.Uuid
  eventId        String   @db.Uuid
  customer_email String
  quantity       Int
  total_amount   Float
  status         String
  ticket_code    String
  created_at     DateTime @default(now())

  event_id Event    @relation(fields: [eventId], references: [id])
  ticket   ticket[]

  @@map("orders")
}

model ticket {
  id              String   @id @default(uuid()) @db.Uuid
  orderId         String   @db.Uuid
  qr_code         String
  status          String
  validation_date DateTime

  order_id Order @relation(fields: [orderId], references: [id])

  @@map("tickets")
}
